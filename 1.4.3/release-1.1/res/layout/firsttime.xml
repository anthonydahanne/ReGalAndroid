<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<ScrollView android:id="@+id/aboutscrollview"
		android:orientation="vertical" android:layout_width="fill_parent"
		android:layout_height="fill_parent">
		<LinearLayout android:orientation="vertical"
			android:layout_width="fill_parent" android:layout_height="fill_parent">
			<TextView android:text="Welcome to G2Android" android:id="@+id/versionName"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:paddingLeft="15px" android:paddingTop="15px"
				android:textStyle="bold" android:layout_gravity="center_vertical"
				android:textColor="#ffffff" />
			<TextView android:paddingTop="15px" android:paddingBottom="15px"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:paddingLeft="15px" android:textColor="#ffffff" android:text="@string/what_is_g2android"
				android:autoLink="web"  android:textColorLink="#ffffff" />
			<Button android:paddingTop="15px" android:layout_gravity="center" android:id="@+id/ok_id"  android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/ok"/>
				
		</LinearLayout>
	</ScrollView>
</LinearLayout>